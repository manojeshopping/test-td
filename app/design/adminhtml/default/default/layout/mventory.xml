<layout>
  <jquery>
    <reference name="head">
      <action method="addJs">
        <script>jquery/jquery-min.js</script>
      </action>
    </reference>
  </jquery>

  <jquery_ui>
    <reference name="head">
      <action method="addJs">
        <script>jquery/jquery-ui-custom-min.js</script>
      </action>
    </reference>
  </jquery_ui>

  <adminhtml_catalog_product_attribute_edit>
    <reference name="attribute_edit_tabs">
      <block type="mventory/metadata" name="mventory.tab" as="mventory" template="mventory/metadata.phtml" />
      <action method="addTabAfter">
        <id>mventory</id>
        <tab>mventory</tab>
        <after>labels</after>
      </action>
    </reference>
  </adminhtml_catalog_product_attribute_edit>

  <adminhtml_catalog_product_set_edit>
    <update handle="jquery" />
    <update handle="jquery_ui" />

    <reference name="head">
      <action method="addCss"><css>mventory/css/styles.css</css></action>

      <action method="addJs"><js>mventory/matching.js</js></action>
    </reference>

    <reference name="content">
      <block type="mventory/matching" name="mventory.matching" template="mventory/matching.phtml">
        <block type="mventory/matching_categories" name="mventory.matching.categories" as="categories" template="mventory/matching/categories.phtml" />
      </block>
    </reference>
  </adminhtml_catalog_product_set_edit>

  <adminhtml_customer_edit>
    <reference name="js">
      <block type="adminhtml/template" template="mventory/customer/edit/js.phtml" name="mventory.customer.edit.js" as="mventory_customer_edit_js"></block>
    </reference>
  </adminhtml_customer_edit>

  <adminhtml_catalog_product_attribute_edit>
    <reference name="head">
      <action method="addCss"><css>mventory/css/styles.css</css></action>
    </reference>
  </adminhtml_catalog_product_attribute_edit>

  <adminhtml_system_config_edit>
    <reference name="head">
      <action method="addCss"><css>mventory/css/styles.css</css></action>
    </reference>
  </adminhtml_system_config_edit>
</layout>
