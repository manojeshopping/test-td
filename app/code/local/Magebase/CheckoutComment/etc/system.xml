                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enable the customer comment field on the shipping method step.</comment>
                        </enable_comment>
                    </fields>
                </mbcheckoutcomment>
            </groups>
        </checkout>
    </sections>
</config>