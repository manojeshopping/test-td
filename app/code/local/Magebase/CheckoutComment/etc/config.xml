<config>
    <modules>
        <Magebase_CheckoutComment>
            <version>0.1.1</version>
        </Magebase_CheckoutComment>
    </modules>
    <global>
        <helpers>
            <checkoutcomment>
                <class>Magebase_CheckoutComment_Helper</class>
            </checkoutcomment>
        </helpers>
        <blocks>
            <checkoutcomment>
                <class>Magebase_CheckoutComment_Block</class>
            </checkoutcomment>
        </blocks>
        <models>
            <checkoutcomment>
                <class>Magebase_CheckoutComment_Model</class>
				<resourceModel>checkoutcomment_mysql4</resourceModel>
            </checkoutcomment>
        </models>
		<resources>
            <checkoutcomment_setup>
                <setup>
                    <module>Magebase_CheckoutComment</module>
                    <class>Mage_Sales_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </checkoutcomment_setup>
            <checkoutcomment_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </checkoutcomment_write>
            <checkoutcomment_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </checkoutcomment_read>
        </resources>
        <fieldsets>
			<sales_convert_quote>                           
                <myorder_customercomment><to_order>*</to_order></myorder_customercomment>
            </sales_convert_quote>
            <sales_convert_order>
				<myorder_customercomment><to_quote>*</to_quote></myorder_customercomment>
            </sales_convert_order>
            <!--<sales_convert_quote_address>
                <customer_notes><to_order>customer_note</to_order></customer_notes>
            </sales_convert_quote_address>-->
        </fieldsets>
    </global>
    <frontend>
        <events>
			<checkout_controller_onepage_save_shipping>
                <observers>
                    <checkoutcomment_save_comment>
                        <type>singleton</type>
                        <class>checkoutcomment/observer</class>
                        <method>saveComment</method>
                    </checkoutcomment_save_comment>
                </observers>
            </checkout_controller_onepage_save_shipping>
			<checkout_submit_all_after>
				<observers>
					<checkoutcomment_save_customerordercomment>
						<type>model</type>
						<class>checkoutcomment/observer</class>
						<method>saveCustomerOrderComment</method>
					</checkoutcomment_save_customerordercomment>
				</observers>
			</checkout_submit_all_after>
        </events>
        <translate>
            <modules>
                <Magebase_CheckoutComment>
                    <files>
                        <default>Magebase_CheckoutComment.csv</default>
                    </files>
                </Magebase_CheckoutComment>
            </modules>
        </translate>
        <layout>
            <updates>
                <checkoutcomment module="Magebase_CheckoutComment">
                    <file>magebase/checkoutcomment.xml</file>
                </checkoutcomment>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Magebase_CheckoutComment>
                    <files>
                        <default>Magebase_CheckoutComment.csv</default>
                    </files>
                </Magebase_CheckoutComment>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <checkout>
            <mbcheckoutcomment>
                <enable_comment>1</enable_comment>
            </mbcheckoutcomment>
        </checkout>
    </default>
</config>